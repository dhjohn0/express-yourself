{{#extend "base"}}
  
  {{#append "header"}}
    <div class="fluid-container">
      <div id="flash-container">
        {{#if flash.success}}<div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{flash.success}}
        </div>{{/if}}
        {{#if flash.info}}<div class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{flash.info}}
        </div>{{/if}}
        {{#if flash.warn}}<div class="alert alert-warning alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{flash.warn}}
        </div>{{/if}}
        {{#if flash.error}}<div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{flash.error}}
        </div>{{/if}}
      </div>
  {{/append}}

  {{#append "footer"}}
    </div>
  {{/append}}

{{/extend}}